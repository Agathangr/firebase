<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MidiaActivity">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgperfil"
        android:layout_width="472dp"
        android:layout_height="444dp"
        android:layout_marginTop="4dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/Arredondamento"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/perfil" />

    <ImageButton
        android:id="@+id/btnphoto"
        android:layout_width="71dp"
        android:layout_height="75dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/btnGaleria"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgperfil"
        app:srcCompat="@drawable/photo_24" />

    <ImageButton
        android:id="@+id/btnGaleria"
        android:layout_width="71dp"
        android:layout_height="75dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="88dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgperfil"
        app:srcCompat="@drawable/ic_galeria_24" />

</androidx.constraintlayout.widget.ConstraintLayout>